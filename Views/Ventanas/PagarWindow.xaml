<Window x:Class="TPVproyecto.Views.Ventanas.PagarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPVproyecto.Views.Ventanas"
        mc:Ignorable="d"
        Title="PagarWindow" Height="450" Width="800"
        xmlns:mpvk="http://schemas.mpcoding.com/mpcoding/wpf/virtualkeys">
    <Grid>
        <TextBlock Text="A pagar: " FontSize="30" Margin="329,52,329,329"></TextBlock>
        <TextBlock Text="{Binding Total}" FontSize="30" Margin="451,52,207,329"></TextBlock>
        <TextBlock Text="Cambio: " FontSize="30" Margin="329,122,329,259"></TextBlock>
        <TextBox mpvk:VirtualKeyboard.KeyboardWidth="600" mpvk:VirtualKeyPad.Mode="TouchAndMouse" Height="50" Width="200" Text="{Binding TextoPad}" Margin="234,247,366,137"/>
        <Button Width="100" Height="50" Margin="472,247,228,137">Aceptar</Button>
    </Grid>
</Window>
