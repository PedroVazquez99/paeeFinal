<Window x:Class="TPVproyecto.Views.Ventanas.PagarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPVproyecto.Views.Ventanas"
        mc:Ignorable="d"
        Title="PagarWindow" Height="450" Width="800"
        xmlns:mpvk="http://schemas.mpcoding.com/mpcoding/wpf/virtualkeys">
    <Grid>
        <TextBox mpvk:VirtualKeyboard.KeyboardWidth="600" mpvk:VirtualKeyboard.Mode="TouchAndMouse" Height="100" Width="200" Text="{Binding TextoPad}"/>
    </Grid>
</Window>
