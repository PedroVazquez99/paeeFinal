<Window x:Class="TPVproyecto.Views.Ventanas.PagarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPVproyecto.Views.Ventanas"
        xmlns:mpvk="http://schemas.mpcoding.com/mpcoding/wpf/virtualkeys"
        mc:Ignorable="d"
        Title="Pagar"
        Height="450"
        Width="800"
        Background="#FFF5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Monto a pagar -->
        <TextBlock Text="A pagar:"
                   FontSize="24"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Grid.Row="0" Grid.Column="0"
                   Margin="0,10,0,10"/>

        <TextBlock Text="{Binding Total}"
                   FontSize="24"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Grid.Row="0" Grid.Column="1"
                   Margin="0,10,0,10"/>

        <!-- Cambio a devolver -->
        <TextBlock Text="Cambio:"
                   FontSize="24"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Grid.Row="1" Grid.Column="0"
                   Margin="0,10,0,10"/>

        <TextBlock Text="{Binding Cambio}"
                   FontSize="24"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Grid.Row="1" Grid.Column="1"
                   Margin="0,10,0,10"/>

        <!-- Input con teclado virtual -->
        <TextBox Text="{Binding TextoPad}"
                 Height="50"
                 VerticalAlignment="Center"
                 Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                 mpvk:VirtualKeyboard.KeyboardWidth="600"
                 mpvk:VirtualKeyPad.Mode="TouchAndMouse"
                 Margin="0,20,0,20"
                 FontSize="20"
                 Padding="10"
                 BorderBrush="Gray"
                 BorderThickness="1"/>

        <!-- Botón de aceptación -->
        <Button Content="Aceptar"
                Width="120"
                Height="50"
                VerticalAlignment="Center"
                Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                Command="{Binding DataContext.PagoCash, RelativeSource={RelativeSource AncestorType=Window}}"
                Background="#FF007ACC"
                Foreground="White"
                FontSize="18"
                Margin="0,20,0,0"/>
    </Grid>
</Window>
