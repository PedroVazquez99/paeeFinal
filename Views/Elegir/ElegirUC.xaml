<UserControl x:Class="TPVproyecto.Views.Elegir.ElegirUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TPVproyecto"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300" Background="#FF12607B">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Vista dinámica -->
        <ContentControl Content="{Binding CurrentViewModel}"/>

        <!-- Paginación -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
            <Button Content="Anterior" Command="{Binding AnteriorPaginaCommand}" Width="100"/>
            <Button Content="Siguiente" Command="{Binding SiguientePaginaCommand}" Width="100"/>
        </StackPanel>
    </Grid>
</UserControl>
