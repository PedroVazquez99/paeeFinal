<Window x:Class="TPVproyecto.Views.Paginas.Admin.AdminModal.EditarTipoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPVproyecto.Views.Paginas.Admin.AdminModal"
        mc:Ignorable="d"
        Title="EditarTipoWindow" Height="450" Width="800"
        xmlns:mpvk="http://schemas.mpcoding.com/mpcoding/wpf/virtualkeys">
    <Grid>


        <Grid.RowDefinitions>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <TextBox mpvk:VirtualKeyboard.KeyboardWidth="600" mpvk:VirtualKeyboard.Mode="TouchAndMouse" Width="200" Text="{Binding Tipo.NombreTipo}" Margin="0,75,0,0" Height="30"></TextBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Grid.Row="1" Grid.ColumnSpan="2" >
            <Button Content="Cancelar" Command="{Binding CancelarCommand}" Margin="0,0,10,0" Width="100" Height="50"/>
            <Button Content="Guardar" Command="{Binding GuardarCommand}" Margin="0,0,10,0" Width="100" Height="50"/>
        </StackPanel>
    </Grid>
</Window>
