<UserControl x:Class="TPVproyecto.Views.Paginas.PedidoMainUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TPVproyecto.Views.Paginas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    
 
    <Grid>
 
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBox Text="{Binding SearchQuery}"></TextBox>
        
        
        <ListBox ItemsSource="{Binding Pedidos}" Grid.Row="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <!-- Cada item del ListBox mostrará el Sabor y el Tipo del helado -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding ID_Pedido}" FontWeight="Bold" Margin="5" />
                        <TextBlock Text="{Binding Mesa.NombreMesa}" Margin="5" />


                        <Button Content="Detalles" Margin="5" />
                        <Button Content="Borrar" Margin="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" >
            <Button Content="Anterior" Grid.Column="2" Command="{Binding Anterior}"></Button>
            <Button Content="Siguiente" Grid.Column="1" Command="{Binding Siguiente}"></Button>
        </StackPanel>
    </Grid>
</UserControl>
