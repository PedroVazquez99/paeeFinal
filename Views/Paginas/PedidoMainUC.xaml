<UserControl x:Class="TPVproyecto.Views.Paginas.PedidoMainUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TPVproyecto.Views.Paginas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
            <!-- Nueva fila para las líneas de pedido -->
        </Grid.RowDefinitions>

        <!-- Campo de búsqueda -->
        <TextBox Text="{Binding SearchQuery}" Grid.Row="0"/>

        <!-- Lista de pedidos -->
        <ListBox ItemsSource="{Binding Pedidos}" Grid.Row="1"
                 SelectedItem="{Binding PedidoSeleccionado, Mode=TwoWay}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding ID_Pedido}" FontWeight="Bold" Margin="5" />
                        <TextBlock Text="{Binding Mesa.NombreMesa}" Margin="5" />
                        <TextBlock Text="{Binding Total}" Margin="5" />
                        <Button Content="Detalles" Command="{Binding DataContext.SeleccionarPedidoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Margin="5"/>
                        <Button Content="Borrar" Margin="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Lista de líneas de pedido del pedido seleccionado -->
        <ListBox ItemsSource="{Binding LineasPedido}" Grid.Row="3">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding ID}" FontWeight="Bold" Margin="5"/>
                        <TextBlock Text="{Binding Tipo.NombreTipo}" Margin="5"/>
                        <TextBlock Text="{Binding Subtotal}" Margin="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Botones de paginación -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Anterior" Command="{Binding Anterior}" Width="100"/>
            <Button Content="Siguiente" Command="{Binding Siguiente}" Width="100"/>
        </StackPanel>
    </Grid>
</UserControl>
